@page "/connectfour"
@using BlazorConnectFour.Data;

<h1>ConnectFour</h1>


@if (winningPlay == null)
{
    <h2>@currentTurn's Turn!</h2>

}
else
{
    <h2>@winningPlay.WinningColor Wins! <button class="btn btn-success" @onclick="@(() => Reset())">Reset</button></h2>
}

<div class="column">
    @for (int i = 0; i < 6; i++)
    {
    <div class="board">
        @for (int j = 0; j < 7; j++)
        {
            int x = i;
            int y = j;
            <div class="gamepiece @board.Board[i,j].Color.ToString().ToLower()" @onclick="@(() => PieceClicked(x,y))"
                 style="@(IsGamePieceAWinningPiece(winningPlay, i, j)? "opacity: 0.6" : "")">
            </div>
        }
    </div>
    }
</div>

